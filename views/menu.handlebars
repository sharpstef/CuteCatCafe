<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-second">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Menu</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div id="dataList"></div>
</div>
<script id="data-template" type="text/x-handlebars-template">
    \{{#if resultData}}
    <table id="dataDetails" class="generic">
      <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Price</th>
            <th>Ingredients</th>
            <th></th>
        </tr>
      </thead>
      <tbody> 
        \{{#each resultData}}
            <tr id="\{{this.beverageID}}">
                <td>\{{this.name}}</td>
                <td>\{{this.description}}</td>
                <td>\{{this.type}}</td>
                <td>\{{this.price}}</td>
                <td>\{{this.ingredients}}</td>
                <td><button type="submit" onclick="addToCart(\{{{json this}}});">Add to Cart</button></td>
            </tr>
        \{{/each}}
      </tbody>
    </table>
    \{{else}}
        <p>No beverages in database.</p>
    \{{/if}}
</script>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>More info and a button to add this to the cart can go here</p>
  </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.min.js"></script>
<script type="text/javascript" src="js/util.js"></script>
<script type="text/javascript" src="js/menu.js"></script>