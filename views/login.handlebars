<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-third">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Login</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div id="userform">
        {{#if error}}
        <div id="message" class="error"><i class="fa fa-times-circle"></i>{{error}}</div>
        {{/if}}
        {{#if success}}
        <div id="message" class="success"><i class="fa fa-check"></i>{{success}}</div>
        {{/if}}
        <div id="loginForm" class="generic-form">
            <h2>Enter Account Details</h2>
            <form action="/login" method="post">
                <label for="email">Email</label><br>	
                <input type="text" id="email" name="email" required autocomplete="email" />
                <label for="password">Password</label><br>
                <input type="password" id="password" name="password" required autocomplete="current-password" />
                <input type="submit" value="Login" action="/login" />
                <a href="/register" id="register">Register</a>
            </form>
        </div>
    </div>
</div>