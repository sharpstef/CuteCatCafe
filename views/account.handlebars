        <div class="item page-alt item-fourth">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Account Details</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <h1 class="centered">Account Information</h1>
