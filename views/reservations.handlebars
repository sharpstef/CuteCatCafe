<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-fourth">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Reserve Room</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div id="findRoom" class="generic-form" >
        <h2>Find Available Rooms</h2>
        <form id="search">
            <label for="date">Choose a date for your reservation:</label><br>	
            <input type="date" id="date" name="date" required />
            <label for="time">Choose a time for your reservation:</label><br>	
            <select id="time" name="time">
                <option value="08:00:00">08:00 AM Pacific Time</option>
                <option value="08:30:00">08:30 AM Pacific Time</option>
                <option value="09:00:00">09:00 AM Pacific Time</option>
                <option value="09:30:00">09:30 AM Pacific Time</option>
                <option value="10:00:00">10:00 AM Pacific Time</option>
                <option value="10:30:00">10:30 AM Pacific Time</option>
                <option value="11:00:00">11:00 AM Pacific Time</option>
                <option value="11:30:00">11:30 AM Pacific Time</option>
                <option value="12:00:00">12:00 PM Pacific Time</option>
                <option value="12:30:00">12:30 PM Pacific Time</option>
                <option value="13:00:00">01:00 PM Pacific Time</option>
                <option value="13:30:00">01:30 PM Pacific Time</option>
                <option value="14:00:00">02:00 PM Pacific Time</option>
                <option value="14:30:00">02:30 PM Pacific Time</option>
                <option value="15:00:00">03:00 PM Pacific Time</option>
                <option value="15:30:00">03:30 PM Pacific Time</option>
                <option value="16:00:00">04:00 PM Pacific Time</option>
                <option value="16:30:00">04:30 PM Pacific Time</option>
                <option value="17:00:00">05:00 PM Pacific Time</option>
                <option value="17:30:00">05:30 PM Pacific Time</option>
                <option value="18:00:00">06:00 PM Pacific Time</option>
                <option value="18:30:00">06:30 PM Pacific Time</option>
                <option value="19:00:00">07:00 PM Pacific Time</option>
                <option value="19:30:00">07:30 PM Pacific Time</option>
            </select>
            <small>The cafe is open 8am to 8pm</small><br>
            <label for="duration">How long do you want to book a room for?</label><br>	
            <select id="duration" name="duration">
                <option value="30">30 minutes</option>
                <option value="60">1 hour</option>
                <option value="90">1 hour 30 minutes</option>
                <option value="120">2 hours</option>
                <option value="150">2 hours 30 minutes</option>
                <option value="180">3 hours</option>
                <option value="210">3 hours 30 minutes</option>
                <option value="240">4 hours</option>
                <option value="480">8 hours</option>
            </select>
            <br><br>
            <input type="submit" value="Search" />
        </form>
    </div>
</div>
<div class="container">
    <div id="message"></div>
    <div id="dataList"></div>
</div>
<script id="data-template" type="text/x-handlebars-template">
    \{{#if resultData}}
    <h2>Available Rooms</h2>
    <table id="dataDetails" class="generic">
      <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Cat</th>
        <th>Fee</th>
        <th></th>
      </thead>
      <tbody> 
        \{{#each resultData}}
        <tr id="\{{this.roomID}}">
            <td>\{{this.name}}</td>
            <td>\{{this.roomDescription}}</td>
            <td>\{{this.cat}}</td>
            <td>\{{this.fee}}</td>
            <td>
              <button type="submit" value="Reserve" onclick="bookRoom(\{{{json this}}});">Reserve</button>
            </td>
        </tr> 
        \{{/each}}
      </tbody>
    </table>
    \{{/if}}
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.min.js"></script>
<script type="text/javascript" src="js/util.js"></script>
<script type="text/javascript" src="js/reservations.js"></script>