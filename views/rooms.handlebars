<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-third">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Manage Rooms</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
  <div id="userform">
    {{#if error}}
    <h2 class="error">{{error}}</h2>
    {{/if}}
    {{#if success}}
    <h2 class="success">{{success}}</h2>
    {{/if}}
      <div id="roomForm" class="generic-form" >
      <h2>Add Room</h2>
      <form action="/addRoom" method="post">
        <label for="name">Name</label><br>	
        <input type="text" id="name" name="name" required />
        <label for="description">Description</label><br>	
        <input type="text" id="description" name="description" required />
        <label for="price">Fee</label><br>	
        <input type="number" id="price" name="price" required />
        <label for="cat-search">Cat:</label>
        <input type="search" id="cat-search" name="q"
            aria-label="Search for cat" placeholder="Find cat"> <br>
        <fieldset>
            <legend> Reservable: </legend>
            <input type="radio" id="yes" name="type" value="yes">
            <label for="yes">Yes</label>
            <input type="radio" id="no" name="type" value="no">
            <label for="no">No</label>
        </fieldset>
        <input type="submit" value="Add" />
      </form>
    </div>
  </div>
</div>

<div class="container">
    {{#if data}}
    <table class="generic">
    <thead>
        <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Reservable</th>
        <th>Fee</th>
        <th>Cat</th>
        <th>Remove</th>
        </tr>
    </thead>
    <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.roomDescription}}</td>
                <td>{{#if this.reservable}}No {{else}} Yes {{/if}}</td>
                <td>${{this.fee}}.00</td>
                <td>{{this.cat}}</td>
                <td><i class="fa fa-times-circle"></i></td>
            </tr>
        {{/each}}
    </tbody>
    </table>
    {{else}}
        <p>No rooms in database.</p>
    {{/if}}
</div>