<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-second">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Ingredient Catalog</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
  <div id="userform">
    {{#if error}}
    <h2 class="error">{{error}}</h2>
    {{/if}}
    {{#if success}}
    <h2 class="success">{{success}}</h2>
    {{/if}}
      <div id="ingredientForm" class="generic-form" >
      <h2>Add Ingredient</h2>
      <form action="/addIngredient" method="post">
        <label for="name">Name</label><br>	
        <input type="text" id="name" name="name" required />
        <input type="submit" value="Add" />
      </form>
    </div>
  </div>
</div>

<div class="container">
    {{#if data}}
    <table class="generic">
    <thead>
        <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Remove</th>
        </tr>
    </thead>
    <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td><i class="fa fa-check-circle"></i></td>
                <td><i class="fa fa-times-circle"></i></td>
            </tr>
        {{/each}}
    </tbody>
    </table>
    {{else}}
        <p>No ingredients in database.</p>
    {{/if}}
</div>