<section id="content" class="banner" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item page-alt item-first">
            <div class="caption caption-alt">
                <div class="container">
                    <h1>Manage Cats</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
      <div id="message"></div>
      <div id="catForm" class="generic-form">
      <h2>Add Cat</h2>
      <form id="add">
        <label for="date">Date Admitted</label><br>	
        <input type="date" id="date" name="date" required />
        <label for="name">Name</label><br>	
        <input type="text" id="name" name="name" required />
        <label for="breed">Breed</label><br>	
        <input type="text" id="breed" name="breed" required />
        <label for="age">Age (in years)</label><br>	
        <input type="number" id="age" name="age" min="0" required />
        <label for="room">Assigned Room:</label>
        <select id="room" name="room">
            <option value="" disable selected>Select Room</option>
        </select><br><br>
        <input type="submit" value="Add" />
      </form>
    </div>
</div>

<div class="container">
  <div id="message"></div>
  <div id="dataList"></div>
</div>

<script id="data-template" type="text/x-handlebars-template">
    \{{#if resultData}}
    <h2>Cats at Cafe</h2>
    <table id="dataDetails" class="generic">
      <thead>
        <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Age</th>
        <th>Date Admitted</th>
        <th>Adopted</th>
        <th>Room</th>
        <th>Update</th>
        <th>Remove</th>
        </tr>
      </thead>
      <tbody> 
        \{{#each resultData}}
            <tr id="\{{this.catID}}">
                <td>\{{this.name}}</td>
                <td>\{{this.breed}}</td>
                <td>\{{this.age}}</td>
                <td>\{{this.dateAdmitted}}</td>
                <td>\{{#if this.adopted}}Yes \{{else}} No \{{/if}}</td>
                <td>\{{this.room}}</td>
                <td><i class="fa fa-check-circle"></i></td>
                <td><i class="fa fa-times-circle"></i></td>
            </tr>
        \{{/each}}
      </tbody>
    </table>
    \{{else}}
        <p>No cats in database.</p>
    \{{/if}}
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.min.js"></script>
<script type="text/javascript" src="js/util.js"></script>
<script type="text/javascript" src="js/cats.js"></script>